{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Level",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({job=\"nocodex\", format=\"json\"} | json | level =~ \"$level\" [$__auto]))",
          "legendFormat": "{{ level }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 60,
            "stacking": { "mode": "normal" },
            "lineWidth": 0
          },
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Error" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Warning" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Information" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Fatal" },
            "properties": [{ "id": "color", "value": { "fixedColor": "dark-red", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "Error & Fatal Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"nocodex\", format=\"json\"} | json | level =~ `Error|Fatal`",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    },
    {
      "id": 3,
      "title": "All Logs (filtered)",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 18 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"nocodex\", format=\"json\"} | json | level =~ \"$level\" |= \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    },
    {
      "id": 4,
      "title": "Errors by SourceContext",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 30 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (source_context) (count_over_time({job=\"nocodex\", format=\"json\"} | json | level =~ `Error|Fatal` [$__auto]))",
          "legendFormat": "{{ source_context }}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "donut",
        "reduceOptions": { "calcs": ["sum"] }
      }
    },
    {
      "id": 5,
      "title": "Error Rate (per minute)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 30 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"nocodex\", format=\"json\"} | json | level =~ `Error|Fatal` [1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "errors/min"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "area"
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["nocodex", "logging", "loki"],
  "templating": {
    "list": [
      {
        "name": "level",
        "type": "custom",
        "label": "Log Level",
        "current": { "text": "All", "value": ".*" },
        "options": [
          { "text": "All", "value": ".*", "selected": true },
          { "text": "Error", "value": "Error", "selected": false },
          { "text": "Fatal", "value": "Fatal", "selected": false },
          { "text": "Warning", "value": "Warning", "selected": false },
          { "text": "Information", "value": "Information", "selected": false },
          { "text": "Debug", "value": "Debug", "selected": false }
        ],
        "includeAll": false,
        "multi": true
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "current": { "text": "", "value": "" }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "NocodeX â€” Logs & Errors",
  "uid": "nocodex-logs",
  "version": 1
}
